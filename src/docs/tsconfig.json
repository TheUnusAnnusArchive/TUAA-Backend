{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES5",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["ES6", "ES2017.String", "ES2016.Array.Include", "DOM"]
  },
  "exclude": ["../../ts/types/*", "../src/*"]
}
